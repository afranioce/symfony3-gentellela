<!DOCTYPE html>
<html lang="pt-BR">
<html>
    <head>
        <meta charset="{{ _charset }}" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %} | {{ site_prefix ~ ' ' ~ site_name }}{% if site_slogan %} - {{ site_slogan }}{% endif %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- Bootstrap -->
        <link href="{{ asset('assets/vendors/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet">
        <!-- Font Awesome -->
        <link href="{{ asset('assets/vendors/font-awesome/css/font-awesome.css') }}" rel="stylesheet">
        <!-- iCheck -->
        <link href="{{ asset('assets/vendors/iCheck/skins/flat/green.css') }}" rel="stylesheet">
        <!-- Select2 -->
        <link href="{{ asset('assets/vendors/select2/dist/css/select2.css') }}" rel="stylesheet">
        <!-- Switchery -->
        <link href="{{ asset('assets/vendors/switchery/dist/switchery.css') }}" rel="stylesheet">
        <!-- Custom Theme Style -->
        <link href="{{ asset('assets/css/custom.min.css') }}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="nav-md{% if body_classes is defined %} {{ body_classes }}{% endif %}">
        {% block body %}{% endblock %}

        <!-- jQuery -->
        <script src="{{ asset('assets/vendors/jquery/dist/jquery.js') }}"></script>
        <!-- Bootstrap -->
        <script src="{{ asset('assets/vendors/bootstrap/dist/js/bootstrap.js') }}"></script>
        <!-- iCheck -->
        <script src="{{ asset('assets/vendors/iCheck/icheck.js') }}"></script>
        <!-- Switchery -->
        <script src="{{ asset('assets/vendors/switchery/dist/switchery.js') }}"></script>
        <!-- Custom Theme Scripts -->
        <script src="{{ asset('assets/js/custom.js') }}"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
